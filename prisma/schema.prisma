// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  bio             String?
  accounts        Account[]
  sessions        Session[]
  snippets        Snippet[]
  documents       Document[]
  bugs            Bug[]
  snippetComments SnippetComment[]
  documentComments DocumentComment[]
  likes           Like[]
  saves           Save[]
  documentLikes   DocumentLike[]
  documentSaves   DocumentSave[]
  bugUpvotes      BugUpvote[]
  followers       Follows[]        @relation("following")
  following       Follows[]        @relation("follower")
  notifications   Notification[]   @relation("recipient")
  sentNotifications Notification[] @relation("originator")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Snippet {
  id          String   @id @default(cuid())
  title       String   @unique
  description String
  code        String   @db.Text
  language    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isPublic    Boolean  @default(true)
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String

  comments SnippetComment[]
  likes    Like[]
  saves    Save[]
}

model Document {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String   @db.Text
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String

  comments DocumentComment[]
  likes    DocumentLike[]
  saves    DocumentSave[]
}

model Bug {
  id        String   @id @default(cuid())
  content   String   @db.Text
  status    String   @default("OPEN")
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  upvotes   BugUpvote[]
}

model Follows {
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
}

model Like {
  id        String   @id @default(cuid())
  snippetId String
  userId    String
  createdAt DateTime @default(now())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId], name: "userId_snippetId")
}

model Save {
  id        String   @id @default(cuid())
  snippetId String
  userId    String
  createdAt DateTime @default(now())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, snippetId], name: "userId_snippetId")
}

model DocumentLike {
  id         String   @id @default(cuid())
  documentId String
  userId     String
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
}

model DocumentSave {
  id         String   @id @default(cuid())
  documentId String
  userId     String
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
}

model SnippetComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  snippetId String
  authorId  String
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model DocumentComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  documentId String
  authorId  String
  document  Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model BugUpvote {
  id        String   @id @default(cuid())
  bugId     String
  userId    String
  createdAt DateTime @default(now())
  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bugId])
}

enum NotificationType {
  LIKE
  COMMENT
  FOLLOW
  SAVE
}

model Notification {
  id           String           @id @default(cuid())
  recipientId  String
  originatorId String
  type         NotificationType
  read         Boolean          @default(false)
  createdAt    DateTime         @default(now())
  link         String? // e.g., /snippets/id or /docs/slug

  recipient    User @relation("recipient", fields: [recipientId], references: [id], onDelete: Cascade)
  originator   User @relation("originator", fields: [originatorId], references: [id], onDelete: Cascade)

  @@index([recipientId])
}
